<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/call_color"
    tools:context=".Start.StartActivity"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:id="@+id/native_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo"
        app:riv_border_color="@color/white"
        app:riv_border_width="@dimen/_2sdp"
        app:riv_corner_radius="@dimen/_100sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_15sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Enter your info"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/raduised_full"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_baseline_group_24"
            android:drawableTint="@color/call_color"
            android:hint="  Your Name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingHorizontal="@dimen/_15sdp"
            android:textColor="@color/call_color"
            android:textColorHint="@color/call_color"
            android:textSize="@dimen/_11sdp"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/raduised_full"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_baseline_cake_24"
            android:drawableTint="@color/call_color"
            android:hint="  Your Age"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingHorizontal="@dimen/_15sdp"
            android:textColor="@color/call_color"
            android:textColorHint="@color/call_color"
            android:textSize="@dimen/_11sdp"
            tools:ignore="UnusedAttribute" />


        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:drawableTint="@color/call_color"
            android:text="Start Chat"
            android:textSize="21sp"
            android:textStyle="bold"
            app:backgroundTint="@color/tab_color" />
    </LinearLayout>
</RelativeLayout>